    </div><!-- /.container-fluid -->
    </nav>



    <div class="container-fluid">
      <div class="row fangxin-header">
        <div class="col-xs-12">
          <h4><span class="glyphicon glyphicon-file" aria-hidden="true"></span>&nbsp;会员</h4>
        </div>
      </div>
    </div>
    <br>
    <div class="container">
      <div class="loader" data-ng-init="init()" data-ng-hide="1">
      </div>
      <div class="row">
        <div class="col-xs-12">
          <div class="btn-group" role="group">
            <button class="btn" data-ng-show="!showForm" data-ng-click="showForm=true;member={};showUpdateForm=false;images=[]"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>&nbsp; 创建
            <button class="btn" type="button" data-ng-show="showForm" data-ng-click="showForm=false;member={}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp; 取消</button><!-- <input type="button" class="btn" ng-show="!showForm" ng-click="showForm=true;"/> -->
            <button class="btn" data-ng-hide="action" data-ng-click="action=!action"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>&nbsp; 编辑</button>
            <button class="btn" data-ng-show="action" data-ng-click="action=!action;member={};showUpdateForm=false;"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>&nbsp; 完成</button>
            <button class="btn" data-ng-click="refresh()"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>&nbsp; 重载</button>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-xs-12">
        <form id="member-add-form" method="POST" class="form-horizontal col-sm-6 well" name="addProductForm" data-ng-show="showForm">
          <div ng-repeat="error in memberError" class="col-sm-12">
              <div class="alert alert-danger animated fadeIn">{{error.msg}}</div>
          </div>
          <div data-ng-repeat="field in memberSchema" >
            <div class="form-group row">
                  <label for="member-add-{{field['title']}}" class="col-sm-2 control-label">{{field['title']}}</label>
                  <div class="col-sm-10">
                      <input name="{{field['schemaKey']}}" data-ng-if="(field['type'] == 'text' || field['type'] == 'email' || field['type'] == 'password')" type="{{field['type']}}" class="span2 form-control" data-ng-model="member[field['schemaKey']]" placeholder="{{field['title']}}" id="member-add-{{field['title']}}" required/>
                      <select data-ng-if="field['type'] == 'select'" data-ng-model="member[field['schemaKey']]" ng-multiple="true" multiple ng-options="option for option in field['options']" class="form-control" required>
                          <option value="">-- Choose Role --</option>
                      </select>
                      <textarea data-ng-if="field['type'] == 'textarea'" data-ng-model="product[field['schemaKey']]" class="form-control"></textarea>
                  </div>
              </div>
            </div>
            <div class="col-sm-offset-2 col-sm-4">
              <button class="btn" data-ng-click="add(member)">创建</button>
            </div>
        </form>
        </div>
      </div>

      <div class="row" id="member-update-form">
        <div class="col-xs-12">
        <form method="POST" class="form-horizontal col-sm-7 well"  name="updateProductForm" data-ng-show="showUpdateForm">
          <div ng-repeat="error in memberError" class="col-sm-12">
              <div class="alert alert-danger animated fadeIn">{{error.msg}}</div>
          </div>
          <div class="form-group row">
                <div class="col-sm-10">
                    {{member.id}}
                </div>
          </div>
          <div data-ng-repeat="field in memberSchema">
            <div class="form-group row">
                  <label for="member-add-{{field['title']}}" class="col-sm-2 control-label">{{field['title']}}</label>
                  <div class="col-sm-10">
                      <input name="{{field['schemaKey']}}" data-ng-if="(field['type'] == 'text' || field['type'] == 'email' || field['type'] == 'password')" type="{{field['type']}}" class="span2 form-control" data-ng-model="member[field['schemaKey']]" placeholder="{{field['title']}}" id="member-add-{{field['title']}}" required/>
                      <select data-ng-if="field['type'] == 'select'" data-ng-model="member[field['schemaKey']]" ng-multiple="true" multiple ng-options="option for option in field['options']" class="form-control" required>
                          <option value="">-- Choose Role --</option>
                      </select>
                      <textarea data-ng-if="field['type'] == 'textarea'" data-ng-model="product[field['schemaKey']]" class="form-control"></textarea>
                  </div>
            </div>
          </div>
          <div class="col-sm-offset-2 col-sm-4">
            <button class="btn" data-ng-click="update(member.id);">更新</button>
          </div>
        </form>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <hr>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <table class="table table-striped table-bordered table-hover editable-table" data-ng-show="members.length">
              <tr>
                  <th data-ng-show="action">
                  </th>
                  <th data-ng-repeat="field in memberSchema" data-ng-if="field.inTable">{{field.title}}</th>
              </tr>
              <tr data-ng-repeat="member in members">
                  <td data-ng-show="action">
                      <button class="btn" data-ng-click="delete(member)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp; 删除</button>
                      <button class="btn" data-ng-click="edit(member.id)"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>&nbsp; 编辑</button></a>
                  </td>
                  <td class="table-editable-cell" data-ng-repeat="field in memberSchema" data-ng-if="field.inTable">
                      <span data-ng-if="(field['type'] == 'text' || field['type'] == 'email' || field['type'] == 'textarea')" class="editable-span" data-ng-editable="update(member.id)" data-ng-editable-model="member[field['schemaKey']]">{{member[field['schemaKey']]}}</span>
                      <span data-ng-click="beforeSelect(field['schemaKey'], member)" data-ng-if="(field['type'] == 'select')" class="editable-span" data-ng-editable-select="update(member, field['schemaKey'])" data-ng-editable-select-model="member[field['schemaKey']]" data-ng-editable-select-options="field['options']">
                      </span>
                  </td>
              </tr>
          </table>
        </div>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.1/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="https://code.angularjs.org/1.3.15/angular.min.js"></script>
    <script src="https://code.angularjs.org/1.3.15/angular-resource.min.js"></script>
    <script src="/controllers/member.js"></script>
    </body>
</html>
